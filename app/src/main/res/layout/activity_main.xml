<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.muzhistogram.MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="显示数据"
        android:gravity="center"
        android:layout_gravity="center"
         />
<com.example.administrator.muzhistogram.customerview.MuzHistogram
    android:id="@+id/muzHistogram"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:histogramColor="#FF00FF"
    app:histogramWidth="100"
    app:histogramMinInterval="15"
    app:txtSize="35"
    app:txtNameInterval="35"
    app:txtNumberInterval="65"
    app:txtNumberColor="#00A600"
    app:txtNameColor="#303F9F"
    app:defaultColor="#fb722e"
    app:initTextColor="true"/>
</LinearLayout>
